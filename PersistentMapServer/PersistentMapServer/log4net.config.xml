<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR" />
      <foreColor value="White" />
      <backColor value="Red, HighIntensity" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>

  <appender name="ConsoleRollingLog" type="log4net.Appender.RollingFileAppender">
    <file value="../Logs/console.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="30" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>

  <appender name="HeartBeatRollingLog" type="log4net.Appender.RollingFileAppender">
    <file value="../Logs/heartbeat.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="10" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] - %message%newline" />
    </layout>
  </appender>

  <appender name="RequestsRollingLog" type="log4net.Appender.RollingFileAppender">
    <file value="../Logs/requests.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="10" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] - %message%newline" />
    </layout>
  </appender>

  <!-- By default, everything falls back to the colorized console-->
  <root>
    <level value="WARN" />
    <appender-ref ref="ColoredConsoleAppender" />
    <appender-ref ref="ConsoleRollingLog" />
  </root>
  
  <!-- Heartbeats go to console @ WARN and log at INFO-->
  <logger name="PersistentMapServer.HeartBeatMonitor" additivity="false">
    <level value="DEBUG" />
    <appender-ref ref="HeartBeatRollingLog" />
  </logger>

  <logger name="PersistentMapServer.MessageInspector.RequestDurationLoggingInspector" additivity="false" >
    <level value="DEBUG" />
    <appender-ref ref="RequestsRollingLog" />
    <appender-ref ref="ColoredConsoleAppender" />
  </logger>
</log4net>